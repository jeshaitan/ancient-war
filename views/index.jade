doctype
html
  head
    title Ancient War
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=MedievalSharp')
    link(rel='shortcut icon', href='/favicon.png' type='image/x-icon')
    meta(name=viewport, content='width=device-width, initial-scale=1')
  body
    h1(id='intro') ⚔ Welcome to Ancient War ⚔
    div(id='leftWrap') 
      table(id='history')
        each action, i in history
          tr
            td(class='author')= action.author + ':'
            td(class='description')= action.description
      div(id='inputContainer')
        form(action='do', method='post', enctype='application/json')
            input(id='actionField', type='text', name='input', autofocus='autofocus', autocomplete='off')
    div(id='rightWrap')
      table(id='info')
        tr
          th Lobby Commands
          th Battle Commands
        tr 
          td Journey (J): Go out into the wilderness. 
          td Attack (A): Use your weapon to attack the enemy.
        tr
          td Shop (S): Go to the shop.
          td Magic (M): Use a magical spell or ability.
        tr
          td
          td Item (I): Use an item from your inventory.
      div(id='midWrap')
        table(id='stats')
          tr
            td Hitpoints: #{user.maxhp}
            td Mana: #{user.maxmp}
            td Speed: #{user.speed}
          tr
            td Attack: #{user.attack}
            td Magic Attack: #{user.magicAttack}
            td Charisma: #{user.charisma}
          tr 
            td Defense: #{user.defense}
            td Magic Defense: #{user.magicDefense}
            td Luck: #{user.luck}
        table(id='skills')
          tr
            th Spells and Abilities:
          each skill, i in user.skills
            tr
              td #{user.skills[i].name}
      table(id='inven')
        tr
          th Inventory:
          th Equipped Weapons:
          th Equipped Armor:
        each item, i in user.items
          tr
            if typeof(user.items[i]) !== 'undefined'
              td(class='item') #{user.items[i].name}
            if typeof(user.weapons[i]) !== 'undefined'
              td(class='item') #{user.weapons[i].name}
            if typeof(user.armor[i]) !== 'undefined'
              td(class='item') #{user.armor[i].name}          
            
          
